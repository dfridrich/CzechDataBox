      </input>
      <output >
        <soap:body use="literal" />
      </output>
    </operation>

  </binding>

  <!-- ******************************************************************* -->
  <service name="dmOperationsWebService">
    <port name="dmOperationsPortType" binding="tns:dmOperationsBinding">
      <soap:address location="https://ws1.mojedatovaschranka.cz/DS/dz"/>
    </port>
  </service>

</definitions>

